doctype html
html(lang="en")
  head
  include ../partials/_navbar.pug

    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Add Laser Page
    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    // Bootstrap JavaScript (optional, if you need to use Bootstrap's JS features)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    style.
      body {
        background-color: #000;
        color: #fff;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .container {
        padding: 20px;
      }
  body

    .container
      h1.mb-4 Add Laser Page
      if errors
        .alert.alert-danger
          ul
            each error in errors
              li= error.msg
      form(action=`/admin/laser/add/?key=${ADMIN_SECRET_KEY}`, method='POST')
        .form-floating.mb-3
          input.form-control(type='text', id='laserName', name='laserName')
          label(for='laserName') Laser Name
        .form-floating.mb-3
          input.form-control(type='number', id='laserPrice', name='laserPrice')
          label(for='laserPrice') Laser Price
        .form-floating.mb-3
          input.form-control(type='text', id='laserTime', name='laserTime')
          label(for='laserTime') Laser Time
        button.btn.btn-primary(type='submit') Add Laser
