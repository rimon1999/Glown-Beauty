doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Edit Laser Page
    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
    style.
      body {
        background-color: #000;
        color: #fff;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .container {
        padding: 20px;
      }
  body
    include ../partials/_navbar.pug
    .container
      h1.mb-4 Edit Laser Page
      if errors
        .alert.alert-danger
          ul
            each error in errors
              li= error.msg
      form(action=`/admin/edit-laser/edit/${laser._id}?key=${ADMIN_SECRET_KEY}`, method='POST')
        .form-floating.mb-3
          input.form-control(type='text', id='laserName', name='laserName', value=laser.laserName, required)
          label(for='laserName') Laser Name
        .form-floating.mb-3
          input.form-control(type='number', id='laserPrice', name='laserPrice', value=laser.laserPrice, required)
          label(for='laserPrice') Laser Price
        .form-floating.mb-3
          input.form-control(type='text', id='laserTime', name='laserTime', value=laser.laserTime, required)
          label(for='laserTime') Laser Time
        button.btn.btn-primary(type='submit') Update Laser
