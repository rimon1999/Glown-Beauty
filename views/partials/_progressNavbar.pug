style.
  .navbar {
    font-family: 'Quicksand', sans-serif;
    padding: 1rem 0;
  }
  
  .navbar-brand {
    font-size: 1.8rem;
    padding: 0;
  }
  
  .nav-link {
    color: #495057 !important;
    font-weight: 500;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    position: relative;
    text-align: center;
  }
  
  .nav-link:hover {
    color: #ffc0cb !important;
  }
  
  .nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background-color: #ffc0cb;
    transition: all 0.3s ease;
    transform: translateX(-50%);
  }
  
  .nav-link:hover::after,
  .nav-link.active::after {
    width: 80%;
  }
  
  @media (max-width: 768px) {
    .nav-link {
      font-size: 1rem;
      padding: 0.5rem 1rem !important;
    }
    
    .navbar-brand {
      font-size: 1.5rem;
    }
  }